<li>
  <span class="title"><%= project.title %></span>
  <span class="description"><%= project.description %></span>
  <span class="location"><%= project.location %></span>
  <span class="start"><%= project.start %></span>
  <span class="end"><%= project.end %></span>
  <span class="goal"><%= project.goal %></span>
  <span class="pledged"><%= project.pledged %></span>
  <span class="backers"><%= project.backers %></span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(project.created_at) %> ago.
  </span>
  <% if !current_user.nil? && current_user.admin? %>
    |  <%= link_to "delete", project, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
</li>